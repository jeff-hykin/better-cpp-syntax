#!/usr/bin/env bash

if [ -z "$FORNIX_FOLDER" ]
then
    FORNIX_FOLDER="."
fi

npx textmate-tester \
    --textmateExtension cpp \
    --syntax "$FORNIX_FOLDER/autogenerated/cpp.tmLanguage.json" \
    --examples "$FORNIX_FOLDER/language_examples/" \
    --supportSyntaxes '{ "source.cpp.embedded.macro": "'"$FORNIX_FOLDER"'/autogenerated/cpp.embedded.macro.tmLanguage.json" }' \
    generate-specs --all
